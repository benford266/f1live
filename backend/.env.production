# Production Environment Variables for Backend
NODE_ENV=production
PORT=3001

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ADMIN_SECRET=your-super-secret-admin-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
DATABASE_URL=./data/f1_timing.db

# Redis Configuration (connected to f1-redis container)
REDIS_FAILOVER_ENABLED=true
REDIS_FALLBACK_TO_MEMORY=true
REDIS_HOST=f1-redis
REDIS_PORT=6379
REDIS_COMPRESSION_ALGORITHM=gzip

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
CORS_ORIGIN=https://f1live.myfoodpal.food
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# F1 API Configuration
F1_API_TIMEOUT=30000
F1_API_RETRY_ATTEMPTS=3